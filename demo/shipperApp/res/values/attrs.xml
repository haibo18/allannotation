<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 编辑框 -->
    <declare-styleable name="MyEditText">
        <attr name="my_hint" format="string" />
        <attr name="my_text" format="string" />
        <attr name="my_singleLine" format="boolean" />
        <attr name="my_hideClear" format="boolean" />
        <attr name="my_inputType" format="enum">
            <enum name="normal" value="0"></enum>
            <enum name="password" value="1"></enum>
            <enum name="number" value="2"></enum>
        </attr>
        <attr name="my_imeOptions" format="enum">
            <enum name="actionDone" value="0"></enum>
            <enum name="actionGo" value="1"></enum>
            <enum name="actionSearch" value="2"></enum>
            <enum name="actionNext" value="3"></enum>
        </attr>
        <attr name="my_maxLength" format="integer" />
        <attr name="my_textSize" format="string" />
    </declare-styleable>

</resources>